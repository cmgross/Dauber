@{
    ViewBag.Title = "Coaching Tools";
}

@section HeadSection{
    @Styles.Render("~/Content/onepagewonder")
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    @*http://startbootstrap.com/template-overviews/one-page-wonder/*@
    @Styles.Render("~/Content/Testimonials")
}
<div class="text-center">
    <h3 class="featurette-heading">Fitness Coaching Simplified</h3>
    <br />
    <p><a href="#aboutDivider">Why Dauber?</a> | <a href="#pricingDivider">Pricing</a> | <a href="#testimonialsDivider">Testimonials</a></p>
</div>
<hr class="featurette-divider" id="aboutDivider">
<!-- First Featurette -->
<div class="featurette" id="about">
    <img class="featurette-image img-responsive pull-right" src="http://placehold.it/500x500">
    <h3 class="featurette-heading">
        Why <span class="text-muted">Dauber?</span>
</h3>
    <p class="lead">Dauber automates gathering data from MyFitnessPal and Fitocracy.</p>
    <p>Dauber allows you to easily import your client's MyFitnessPal nutrition information, as well as number of times a client tracked a workout in Fitocracy, DIRECTLY and AUTOMATICALLY into Google Sheets.</p>
    <p>Save yourself and your clients both the time and hassle of entering this manually, and <a href="" onclick=" location.href='@Url.Action("UpdatePlan", "MyAccount")' ">login now</a> to get started with a FREE account! (up to 5 clients)</p>
    <p><a href="#">[top]</a></p>
</div>
<hr class="featurette-divider" id="pricingDivider">

<!-- Second Featurette -->
<div class="featurette" id="pricing" style="border:1px solid black;">
    <div class="container" style="border:1px solid black;">
        <div class="row" style="border:1px solid black;">
            <h2 class="featurette-heading">
                Pricing <span class="text-muted">Plans</span>
            </h2>
        </div>
        <div class="row" style="border:1px solid black;">
            <div class="col-sm-3 col-md-3">
                <div class="well">
                    <h2 class="text-muted">Free</h2>
                    <ul>
                        <li>Up to 5 clients</li>
                        <li>Limited support</li>
                    </ul>
                    <hr>
                    <h3>Free!</h3>
                    <hr>
                    <p>
                        <input type="button" class="btn btn-default btn-sm" value="Select Plan" onclick=" location.href='@Url.Action("UpdatePlan", "MyAccount")' " />
                    </p>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="well">
                    <h2 class="text-success">Pro</h2>
                    <ul>
                        <li>Up to 25 clients</li>
                        <li>Unlimited support</li>
                    </ul>
                    <hr>
                    <h3>$30 / month</h3>
                    <hr>
                    <p>
                        <input type="button" class="btn btn-success btn-sm" value="Select Plan" onclick=" location.href='@Url.Action("UpdatePlan", "MyAccount")' " />
                    </p>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="well">
                    <h2 class="text-warning">Elite</h2>
                    <ul>
                        <li>Up to 50 clients</li>
                        <li>Unlimited support</li>
                    </ul>
                    <hr>
                    <h3>$50 / month</h3>
                    <hr>
                    <p>
                        <input type="button" class="btn btn-warning btn-sm" value="Select Plan" onclick=" location.href='@Url.Action("UpdatePlan", "MyAccount")' " />
                    </p>
                </div>
            </div>
        </div>
        <div class="row" style="border:1px solid black;">
            <h3>
                Have more than 50 clients? <a href="mailto:chuck@chuckgrossfitness.com">Let's talk!</a>
            </h3>
        </div>
        <div class="row" style="border:1px solid black;">
            <p><a href="#">[top]</a></p>
        </div>
    </div>
</div>
<hr class="featurette-divider" id="testimonialsDivider">

