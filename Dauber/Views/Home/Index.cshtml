    <p>
        Save yourself and your clients both the time and hassle of entering this manually, and
        @Html.ActionLink("login now", "Login", "Account")
        @*<a href="" onclick=" location.href = '@Url.Action("Login", "Account")' ">
                login now
            </a>*@ to get started with a FREE account! (up to 100 clients)
    </p>
    <p><a href="#">[top]</a></p>
